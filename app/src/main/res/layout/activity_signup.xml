<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="16dp"
    tools:context=".login.SignupActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuenta" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/username_input_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Shrine.TextInputLayout"
            app:startIconDrawable="@drawable/ic_person_login"
            android:hint="Nombre de usuario*"
            app:errorEnabled="true"
            app:helperTextEnabled="true"
            android:padding="8dp"
            app:helperText="Introduce tu nombre de usuario" >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username_edit_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_input_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Shrine.TextInputLayout"
            app:startIconDrawable="@drawable/ic_password"
            app:endIconMode="password_toggle"
            android:hint="Contraseña*"
            app:errorEnabled="true"
            android:padding="8dp"
            app:helperTextEnabled="true"
            app:helperText="Introduce tu contraseña" >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_edit_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mis datos"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_input_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Shrine.TextInputLayout"
            android:hint="Nombre *"
            android:padding="8dp"
            app:errorEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_edit_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:padding="8dp"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/age_input_reg"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/Widget.Shrine.TextInputLayout"
                android:layout_marginEnd="8dp"
                android:hint="Edad *"
                app:errorEnabled="true" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/age_edit_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/height_input_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Shrine.TextInputLayout"
                android:hint="Altura *"
                app:errorEnabled="true" >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/height_edit_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/weight_input_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                style="@style/Widget.Shrine.TextInputLayout"
                android:hint="Peso" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/weight_edit_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Indica tu genero"/>
        <RadioGroup
            android:id="@+id/radioGroup"
            android:checkedButton="@+id/radio_button_1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radio_female"
                android:layout_width="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_height="match_parent"
                android:text="Mujer"/>
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radio_male"
                android:layout_width="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_height="match_parent"
                android:text="Hombre"/>
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radio_other"
                android:layout_width="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_height="match_parent"
                android:text="Otro"/>
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Discapacidad" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:padding="8dp">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/discapacity_input_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.Shrine.TextInputLayout"
                android:hint="Tipo *"
                android:layout_marginEnd="8dp"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/discapacity_edit_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/degree_input_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                style="@style/Widget.Shrine.TextInputLayout"
                android:hint="Grado *"
                android:layout_marginStart="8dp"
                app:errorEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/degree_edit_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Patologias" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:baselineAligned="false">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/disease_input_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.Shrine.TextInputLayout"
                android:hint="Patologia"
                android:layout_toLeftOf="@id/addDisease"
                android:layout_alignParentStart="true"
                app:errorEnabled="true"
                android:layout_marginEnd="8dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/disease_edit_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addDisease"
                style="@style/Widget.Shrine.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:text="Añadir" />
        </RelativeLayout>
        <ListView
            android:id="@+id/list_diseases_reg"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:divider="@null"
            android:dividerHeight="0dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Shrine.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="Siguiente"
                android:id="@+id/next_button_reg" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_button_reg"
                style="@style/Widget.Shrine.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_toStartOf="@id/next_button_reg"
                android:layout_toLeftOf="@id/next_button_reg"
                android:text="Cancelar" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>